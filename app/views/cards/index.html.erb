<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Manacost</th>
      <th>Colors</th>
      <th>Type</th>


      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>

        <td><%= card.name %></td>
        <td><%= card.manaCost %></td>
        <td><%= card.colors %></td>
        <td><%= card.card_type %></td>

        <td><%= link_to 'Details', card %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>

<br>


